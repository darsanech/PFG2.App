<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PFG2"
             x:Class="PFG2.Views.MainListPage"
             Title="Lista"
             Shell.FlyoutBehavior="Flyout"
             >

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="True" IsVisible="True"/>
    </Shell.BackButtonBehavior>
    <Grid Margin="20,20,20,20" RowSpacing="5" ColumnSpacing="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Text="Laguna"
               FontSize="20"
                BorderColor="Green"
                BackgroundColor="Crimson"
                Command="{Binding ClickedButton}"
                CommandParameter="Laguna"/>
        <Button Grid.Row="1"
                Text="Almata"
               FontSize="20"
                BackgroundColor="Green"
                Command="{Binding ClickedButton}"
                CommandParameter="Almata"/>
        <Button Grid.Column="2"                
                Text="Row 1, Column 1"
               FontSize="20"
                BackgroundColor="BlueViolet"/>
        <Button Grid.Column="1" 
                Grid.Row="3"
                Text="Alquilados"
               FontSize="20"
                BackgroundColor="Grey"
                Command="{Binding ClickedAlquilado}"/>
        <Button Grid.Row="5"
               Grid.ColumnSpan="2"
               Text="Row 2, Columns 0 and 1"
               FontSize="30"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </Grid>


</ContentPage>