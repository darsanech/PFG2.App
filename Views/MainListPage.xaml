<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PFG2"
             x:Class="PFG2.Views.MainListPage"
             Title="Lista"
             >
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="FontAttributes" Value="None"></Setter>
                <Setter Property="TextColor" Value="Black"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False"  IsVisible="False"/>
    </Shell.BackButtonBehavior>
    <Grid Margin="20,20,20,20" RowSpacing="5" ColumnSpacing="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Text="Almata"
                BackgroundColor="PeachPuff"
                Command="{Binding ClickedButtonCommand}"
                CommandParameter="1"/>
        <Button Grid.Row="1"
                Text="Laguna"
                BackgroundColor="OrangeRed"
                Command="{Binding ClickedButtonCommand}"
                CommandParameter="2"/>
        <Button Grid.Row="2"
                Text="Gaviota"
                BackgroundColor="CornflowerBlue"
                Command="{Binding ClickedButtonCommand}"
                CommandParameter="3"/>
        <Button Grid.Row="3"
                Text="MÃ¡s Nou"
                BackgroundColor="Chocolate"
                Command="{Binding ClickedButtonCommand}"
                CommandParameter="5"/>
        <Button Grid.Column="2" 
                Text="Rodas"
                BackgroundColor="YellowGreen"
                Command="{Binding ClickedButtonCommand}"
                CommandParameter="6"/>
        <Button Grid.Column="1" 
                Grid.Row="1"
                Text="Rubina Resort"
                BackgroundColor="Tomato"
                Command="{Binding ClickedButtonCommand}"
                CommandParameter="7"/>
        <Button Grid.Column="1" 
                Grid.Row="2"
                Text="Illa Mateua"
                BackgroundColor="SandyBrown"
                Command="{Binding ClickedButtonCommand}"
                CommandParameter="8"/>
        <Button Grid.Row="3" 
                Grid.Column="1" 
                Text="Palmeras"
                BackgroundColor="Green"
                Command="{Binding ClickedButtonCommand}"
                CommandParameter="4"/>
        <Button Grid.Row="4" 
                Grid.Column="1" 
                Text="Otros"
                BackgroundColor="Teal"
                Command="{Binding ClickedButtonCommand}"
                CommandParameter="9"/>
        <Button Grid.Row="4"
                Text="Por Estado"
                Grid.Column="0" 
                BackgroundColor="Grey"
                Command="{Binding ClickedAlquiladoCommand}"/>
        <Button Grid.Row="5" 
                Grid.Column="0" 
                HorizontalOptions="Start"
                VerticalOptions="End"
                Text="Log Off"
                BackgroundColor="Red"
                Command="{Binding BackButtonCommand}"/>
        <Button Grid.Row="5" 
                Grid.Column="1" 
                HorizontalOptions="End"
                VerticalOptions="End"
                Text="Admin"
                BackgroundColor="Gold"
                IsVisible="{Binding IsAdmin}"
                IsEnabled="{Binding IsAdmin}"
                Command="{Binding BackButtonCommand}"/>
        
    </Grid>


</ContentPage>